{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "DMS Cloudformation",
  "Parameters": {
    "ReplicationInstanceARN": {
      "Default": "REPLICATION_INSTANCE_ARN",
      "NoEcho": "false",
      "Description": "Enter ARN of Replication Instance to be used",
      "Type": "String"
    }
  },
  "Resources": {
    "ReplicationTask": {
      "Type": "AWS::DMS::ReplicationTask",
      "Properties": {
        "SourceEndpointArn": {
          "Ref": "SourceEndpoint"
        },
        "TargetEndpointArn": {
          "Ref": "TargetEndpoint"
        },
        "ReplicationInstanceArn": {
          "Ref": "ReplicationInstanceARN"
        },
        "ReplicationTaskIdentifier": "{}",
        "MigrationType": "{}",
        "TableMappings": null
      }
    },
    "SourceEndpoint": {
      "Type": "AWS::DMS::Endpoint",
      "Properties": {
        "ServerName": "sourceEndpointURL",
        "EndpointIdentifier": "mySourceEndpoint",
        "EndpointType": "source",
        "EngineName": "mysql",
        "Port": 3306,
        "Password": "password",
        "Username": "admin",
        "DatabaseName": "dbName"
      }
    },
    "TargetEndpoint": {
      "Type": "AWS::DMS::Endpoint",
      "Properties": {
        "ServerName": "targetEndpointURL",
        "EndpointIdentifier": "myTargetEndpoint",
        "EndpointType": "target",
        "EngineName": "mysql",
        "Port": 3306,
        "Password": "password",
        "Username": "admin",
        "DatabaseName": "dbName"
      }
    }
  },
  "Outputs": {
    "StackName": {
      "Value": {
        "Ref": "AWS::StackName"
      }
    },
    "RegionName": {
      "Value": {
        "Ref": "AWS::Region"
      }
    },
    "SourceEndPoint": {
      "Value": {
        "Ref": "SourceEndpoint"
      }
    },
    "TargetEndPoint": {
      "Value": {
        "Ref": "TargetEndpoint"
      }
    }
  }
}