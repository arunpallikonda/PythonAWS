{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dms-automation-schema#",
  "title": "DMS Automation Schema Validation",
  "type": "object",
  "properties": {
    "TemplateType": {
      "type": "string",
      "enum": [
        "NEW_ENDPOINTS"
      ]
    },
    "AppShortName": {
      "type": "string"
    },
    "AssetId": {
      "type": "string"
    },
    "AppCode": {
      "type": "string"
    },
    "ReplicationTaskDetails": {
      "type": "object",
      "properties": {
        "MigrationType": {
          "type": "string"
        },
        "ReplicationTaskIdentifier": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "MigrationType",
        "ReplicationTaskIdentifier"
      ]
    },
    "SourceEndpointDetails": {
      "type": "object",
      "properties": {
        "EndpointIdentifier": {
          "type": "string"
        },
        "SourceUrl": {
          "type": "string"
        },
        "EngineName": {
          "type": "string"
        },
        "Port": {
          "type": "integer"
        },
        "DatabaseName": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "EndpointIdentifier",
        "SourceUrl",
        "EngineName",
        "Port",
        "DatabaseName"
      ]
    },
    "TargetEndpointDetails": {
      "type": "object",
      "properties": {
        "EndpointIdentifier": {
          "type": "string"
        },
        "TargetUrl": {
          "type": "string"
        },
        "EngineName": {
          "type": "string"
        },
        "Port": {
          "type": "integer"
        },
        "Username": {
          "type": "string"
        },
        "DatabaseName": {
          "type": "string"
        },
        "RDSInstanceIdentifier": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "EndpointIdentifier",
        "TargetUrl",
        "EngineName",
        "Port",
        "DatabaseName",
        "RDSInstanceIdentifier"
      ]
    },
    "TableMappings": {
      "type": "object",
      "properties": {
        "rules": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "rule-type": {
                  "type": "string"
                },
                "rule-id": {
                  "type": "string"
                },
                "rule-name": {
                  "type": "string"
                },
                "object-locator": {
                  "type": "object",
                  "properties": {
                    "table-name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "table-name"
                  ]
                },
                "rule-action": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": [
                "rule-type",
                "rule-id",
                "rule-name",
                "object-locator"
              ]
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "rules"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "TemplateType",
    "AppShortName",
    "AssetId",
    "AppCode",
    "ReplicationTaskDetails",
    "SourceEndpointDetails",
    "TargetEndpointDetails",
    "TableMappings"
  ]
}
