{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dms-automation-schema#",
  "title": "DMS Automation Schema Validation",
  "type": "object",
  "properties": {
    "TemplateType": {
      "type": "string",
      "enum": [
        "NEW_ENDPOINTS"
      ]
    },
    "ReplicationTaskDetails": {
      "type": "object",
      "properties": {
        "MigrationType": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "MigrationType"
      ]
    },
    "SourceEndpointDetails": {
      "type": "object",
      "properties": {
        "SourceUrl": {
          "type": "string"
        },
        "EngineName": {
          "type": "string",
          "enum": [
            "mysql",
            "oracle",
            "postgres",
            "aurora",
            "aurora-postgresql",
            "redshift",
            "s3",
            "dynamodb",
            "sqlserver"
          ]
        },
        "Port": {
          "type": "integer"
        },
        "DatabaseName": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "SourceUrl",
        "EngineName",
        "Port",
        "DatabaseName"
      ]
    },
    "TargetEndpointDetails": {
      "type": "object",
      "properties": {
        "TargetUrl": {
          "type": "string"
        },
        "EngineName": {
          "type": "string",
          "enum": [
            "mysql",
            "oracle",
            "postgres",
            "aurora",
            "aurora-postgresql",
            "redshift",
            "s3",
            "dynamodb",
            "sqlserver"
          ]
        },
        "Port": {
          "type": "integer"
        },
        "Username": {
          "type": "string"
        },
        "DatabaseName": {
          "type": "string"
        },
        "RDSInstanceIdentifier": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "TargetUrl",
        "EngineName",
        "Port",
        "DatabaseName",
        "RDSInstanceIdentifier"
      ]
    },
    "TableMappings": {
      "type": "object",
      "properties": {
        "rules": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "rule-type": {
                  "type": "string"
                },
                "rule-id": {
                  "type": "string"
                },
                "rule-name": {
                  "type": "string"
                },
                "object-locator": {
                  "type": "object",
                  "properties": {
                    "table-name": {
                      "type": "string"
                    },
                    "schema-name": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "table-name",
                    "schema-name"
                  ]
                },
                "rule-action": {
                  "type": "string"
                }
              },
              "required": [
                "rule-type",
                "rule-id",
                "rule-name",
                "object-locator"
              ]
            }
          ]
        }
      },
      "required": [
        "rules"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "TemplateType",
    "ReplicationTaskDetails",
    "SourceEndpointDetails",
    "TargetEndpointDetails",
    "TableMappings"
  ]
}
